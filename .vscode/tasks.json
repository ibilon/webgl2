{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "checkstyle",
			"command": "haxelib",
			"args": [
				"run",
				"checkstyle",
				"-s",
				"."
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			]
		},
		{
			"label": "documentation",
			"command": "haxelib",
			"args": [
				"run",
				"dox",
				"-i",
				"webgl2.xml",
				"-o",
				"documentation/",
				"-in",
				"js.webgl2",
				"--title",
				"WebGL 2 API documentation"
			],
			"dependsOn": "test",
			"problemMatcher": []
		},
		{
			"label": "testNoUnsafe",
			"command": "haxe",
			"args": [
				"--macro",
				"include(\"js.webgl2\")",
				"--macro",
				"include(\"tests\")",
				"-js",
				"dummy.js",
				"--no-output",
				"-D",
				"webgl2_no_unsafe"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			]
		},
		{
			"label": "test",
			"command": "haxe",
			"args": [
				"--macro",
				"include(\"js.webgl2\")",
				"--macro",
				"include(\"tests\")",
				"-js",
				"dummy.js",
				"--no-output",
				"-xml",
				"webgl2.xml"
			],
			"dependsOn": "testNoUnsafe",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
